<aura:component >
    <aura:attribute name="error" type="String" />
    <div class="slds-p-top--small slds-p-bottom--small">
        <lightning:icon iconName="utility:error" size="medium" alternativeText="Indicates error" class="error-icon" />
        <h3 class="slds-p-left--small inline">Something went wrong</h3>
        <div class="error-msg">
            {!v.error}
        </div>
    </div>
</aura:component>